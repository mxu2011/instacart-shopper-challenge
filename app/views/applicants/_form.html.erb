<%= form_for applicant, url: applicants_path, html: { class: "form-horizontal" } do |f| %>
  <div class="form-group">
    <%= f.label :first_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :first_name, class: "form-control", placeholder: "First" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :last_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :last_name, class: "form-control", placeholder: "Last" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class: "col-sm-2 control-label" %>
    <div class="col-sm-8">
      <%= f.email_field :email, class: "form-control", placeholder: "your.name@example.com" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :phone_number, class: "col-sm-2 control-label" %>
    <div class="col-sm-8">
      <%= f.telephone_field :phone_number, class: "form-control", placeholder: "555-555-5555" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :zip_code, class: "col-sm-2 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :zip_code, class: "form-control", placeholder: "12345" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-8">
      <%= f.submit submit_message(applicant), class: "btn btn-lg btn-primary btn-block" %>
    </div>
  </div>
<% end %>
