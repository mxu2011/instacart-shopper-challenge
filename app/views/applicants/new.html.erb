<div class="row">
  <div class="col-sm-4 col-sm-offset-2">
    <h3>
      Some flavor text explaining why you should be a shopper.
    </h3>

    <p>
      <span class="reason-to-apply">
        Good reason 1
      </span>

      <br>

      <span class="text-muted">
        Explaining good reason 1.
      </span>
    </p>

    <p>
      <span class="reason-to-apply">
        Good reason 2
      </span>

      <br>

      <span class="text-muted">
        Explaining good reason 2. This is a longer explanation!
      </span>
    </p>

    <p>
      <span class="reason-to-apply">
        Good reason 3
      </span>

      <br>

      <span class="text-muted">
        Explaining good reason 3.
      </span>
    </p>
  </div>

  <%= form_for @applicant, url: applicants_path, html: { class: "col-sm-4" } do |f| %>
    <h3 class="text-center">Apply to be an Instacart Shopper</h3>

    <div class="form-group">
      <%= f.text_field :first_name, class: "form-control", placeholder: "First Name" %>
      <%= inline_errors(@applicant.errors, :first_name) %>
    </div>

    <div class="form-group">
      <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name" %>
      <%= inline_errors(@applicant.errors, :last_name) %>
    </div>

    <div class="form-group">
      <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
      <%= inline_errors(@applicant.errors, :email) %>
    </div>

    <div class="form-group">
      <%= f.telephone_field :phone_number, class: "form-control", placeholder: "Cell Phone Number" %>
      <%= inline_errors(@applicant.errors, :phone_number) %>
    </div>

    <div class="form-group">
      <%= f.text_field :zip_code, class: "form-control", placeholder: "Zip Code" %>
      <%= inline_errors(@applicant.errors, :zip_code) %>
    </div>

    <div class="form-group">
      <%= f.submit "Apply!", class: "btn btn-lg btn-primary btn-block" %>
    </div>
  <% end %>
</div>
