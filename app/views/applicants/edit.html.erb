<div class="row">
  <%= form_for @applicant, url: applicants_path, html: { class: "col-sm-8 col-sm-offset-2" } do |f| %>
    <h1 class="text-center">Edit Your Application</h1>

    <div class="form-group">
      <%= f.label :first_name, class: "control-label" %>
      <%= f.text_field :first_name, class: "form-control", placeholder: "First" %>
      <%= inline_errors(@applicant.errors, :first_name) %>
    </div>

    <div class="form-group">
      <%= f.label :last_name, class: "control-label" %>
      <%= f.text_field :last_name, class: "form-control", placeholder: "Last" %>
      <%= inline_errors(@applicant.errors, :last_name) %>
    </div>

    <div class="form-group">
      <%= f.label :email, class: "control-label" %>
      <%= f.email_field :email, class: "form-control", placeholder: "your.name@example.com" %>
      <%= inline_errors(@applicant.errors, :email) %>
    </div>

    <div class="form-group">
      <%= f.label :phone_number, class: "control-label" %>
      <%= f.telephone_field :phone_number, class: "form-control", placeholder: "555-555-5555" %>
      <%= inline_errors(@applicant.errors, :phone_number) %>
    </div>

    <div class="form-group">
      <%= f.label :zip_code, class: "control-label" %>
      <%= f.text_field :zip_code, class: "form-control", placeholder: "12345" %>
      <%= inline_errors(@applicant.errors, :zip_code) %>
    </div>

    <div class="form-group">
      <%= f.submit "Update Application", class: "btn btn-lg btn-primary btn-block" %>
    </div>
  <% end %>
</div>
